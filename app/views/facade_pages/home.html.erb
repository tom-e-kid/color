
<% if signed_in? %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/issue_form' %>
    </section>
  </aside>
  <div class="span8">
    <h3>Issue Feed</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="center">
	<h1>Welcome to Color</h1>
	<h2>Issue management system for the rest of us.</h2>
	<%= link_to "Sign up", signup_path, class: "btn btn-primary" %>
</div>
<% end %>
<li>
  <span class="content"><%= task.content %></span>
  <span class="timestamp">Posted <%= time_ago_in_words(task.created_at) %> ago.</span>
  <% if current_user?(task.user) %>
    <%= link_to "delete", task, method: :delete, data: { confirm: "You sure?" }, title: task.content %>
  <% end %>
</li>
